@model IEnumerable<AntiPatterns.Models.Account>

@{ 
    AntiPatterns.Models.User user = (AntiPatterns.Models.User)Session["user"];
}
<div class="row" style="position: relative">
    <div class="col-md-9">
        <h2>@user.FullName Account Listing</h2>
    </div>
    <div class="col-md-3" style="text-align: right; position: absolute; bottom: 10px; right: 0px;">
        <a href="https://github.com/bedirhan/antipatterns/blob/master/pardonthemalintent.md" target="_blank">Reference</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Account ID</th>
            <th>Title</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(AntiPatterns.Models.Account account in Model)
        {
            <tr>
                <td>@account.ID</td>
                <td>@account.Title</td>
                <td>@Html.ActionLink("Details", "Detail" , new { id = account.ID})</td>
            </tr>
        }
    </tbody>
</table>

