@model AntiPatterns.Models.Account

@{
    AntiPatterns.Models.User user = (AntiPatterns.Models.User)Session["user"];
}

<div class="row" style="position: relative">
    <div class="col-md-9">
        <h2>@user.FullName @Model.Title Account</h2>
    </div>
    <div class="col-md-3" style="text-align: right; position: absolute; bottom: 10px; right: 0px;">
        <a href="https://github.com/bedirhan/antipatterns/blob/master/pardonthemalintent.md" target="_blank">Reference</a>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Account ID</th>
            <th>Title</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ID</td>
            <td>@Model.Title</td>
            <td>@Model.Amount</td>
            <td>@Model.Description</td>
        </tr>
    </tbody>
</table>


