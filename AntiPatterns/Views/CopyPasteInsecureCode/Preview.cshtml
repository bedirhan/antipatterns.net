@model IEnumerable<AntiPatterns.Models.Offer>

<div class="row" style="position: relative">
    <div class="col-md-9">
        <h2>Please control your offers...</h2>
    </div>
    <div class="col-md-3" style="text-align: right; position: absolute; bottom: 10px; right: 0px;">
        <a href="https://github.com/bedirhan/antipatterns/blob/master/copypasteinsecurecode.md" target="_blank">Reference</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Offer ID</th>
            <th>Title</th>
            <th>Total</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AntiPatterns.Models.Offer offer in Model)
        {
            <tr>
                <td>@offer.ID</td>
                <td>@offer.Title</td>
                <td>@offer.Total</td>
                <td>@offer.Reference</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" type="submit">Commit</button>