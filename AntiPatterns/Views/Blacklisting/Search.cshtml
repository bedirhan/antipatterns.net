<div class="row" style="position: relative">
    <div class="col-md-9">
        <h2>Search Portal</h2>
    </div>
    <div class="col-md-3" style="text-align: right; position: absolute; bottom: 10px; right: 0px;">
        <a href="https://github.com/bedirhan/antipatterns/blob/master/blacklisting.md" target="_blank">Reference</a>
    </div>
</div>
<form action="/Blacklisting/Search" method="post">
    <div class="input-group">
        <input type="text" name="search" id="search" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Go!</button>
        </span>
    </div>
</form>

@if (!String.IsNullOrEmpty(ViewBag.Search))
{
    <h4>
        You searched for
        <i style="cursor: pointer;" onclick="var term = '@Html.Raw(ViewBag.Search)'; document.location = '/Blacklisting/Search?search=' + escape(term)">
            @Html.Raw(ViewBag.Search)
    </i>
    </h4>
    <small>
        @ViewBag.Result
    </small>
    <script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Blacklisting/Trend",
                headers: {
                    'X-Company-Ajax': 'true'
                },
                data: {
                    q: "@Html.Raw(ViewBag.Search)"
                }
            }).always(function (data) { });
        });
    </script>
}

